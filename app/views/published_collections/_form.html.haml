= form_for @published_collection do |f|
  .formerror= render 'shared/error_messages', target: @published_collection

  .control-group
    = f.label :name, 'Name', class: 'control-label'
    .controls
      = f.text_field :name

  .control-group
    = f.label :description, 'Description', class: 'control-label'
    .controls
      = f.text_area :description

  .form-actions
    .actions-pre
      = cancel_button 'Cancel', root_path
    .actions
      = f.submit "Confirm", :class => ""
