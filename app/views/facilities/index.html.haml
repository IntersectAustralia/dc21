- content_for :facilities do
  %li.actions
    .facility.new.whitebutton
      = link_to "New Facility", new_facility_path
= render 'pages/pageactions'
%h1 Home / Facilities
#content_container
  = render 'pages/contentnavigation'
  - if @facilities.empty?
    %h3 Displaying 0 of 0 Facilities
  - else
    %table#facilities
      %tr
        %th.view View
        %th= "Name"
        %th= "Code"
      - @facilities.each do |facility|
        %tr{:class => cycle('field_bg', 'field_nobg')}
          %td.view= link_to '', facility, :class => "view", :id => "view_#{facility.id}"
          %td= facility.name
          %td= facility.code
