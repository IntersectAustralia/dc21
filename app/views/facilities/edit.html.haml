= render 'pages/pageactions'
%h1 Home / Facilities / Edit #{@facility.name}
#content_container
  = render 'pages/contentnavigation'
  .container
    = form_for(@facility) do |f|
      .formerror= render "shared/error_messages", :target => @facility
      .rowfield
        %label{ :for => :name } Name:
        = f.text_field :name
        = required
      .rowfield
        %label Code:
        = f.text_field :code
        = required
      .actions
        .cancelbutton
          %span
          = link_to 'Cancel', facility_path("#{@facility.id}"), :class => "cancelbutton"
        = f.submit "Update", :class => "floatright"

