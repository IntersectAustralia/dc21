.container
  %h2 User Sign Up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .formerror= render "shared/error_messages", :target => @user
    = render :partial => 'personal_details', :locals  => {:f => f}
    = render :partial => 'account_details', :locals  => {:f => f}
    .actions
      = f.submit "Submit Request", :class => "blue floatright"
      = link_to 'Cancel', root_path, :class => "button"
