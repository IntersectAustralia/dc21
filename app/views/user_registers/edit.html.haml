%h1 #{@user.email} / Edit Details
#content_container
  = render 'user_registers/contentnavigation'
  .container
    %h2 Edit Account Details
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = render "shared/error_messages", :target => @user
      = render :partial => 'personal_details', :locals => {:f => f}
      .actions
        = f.submit "Update", :class => "floatright"
        .cancelbutton
          %span
          = link_to 'Cancel', users_profile_path, :class => "cancelbutton"
