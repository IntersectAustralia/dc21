%h1 #{@user.email} / Edit Details
#content_container
  .contentnavigation
    = tabs_tag(:builder => MenuTabBuilder, :namespace => :contentnavigation) do |tab|
      = tab.overview 'Overview', users_profile_path
      = tab.editdetails 'Edit Details', edit_user_registration_path
      = tab.changepassword 'Change Password', users_edit_password_path
  .container
    %h2 Edit Account Details
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = render "shared/error_messages", :target => @user
      = render :partial => 'personal_details', :locals => {:f => f}
      .actions
        = f.submit "Update", :class => "floatright"
        = link_to 'Cancel', users_profile_path, :class => "whitebutton"
