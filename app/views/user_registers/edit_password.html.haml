%h1 User / Change Password
#content_container
  = render 'user_registers/contentnavigation'
  .container
    %h2 Change Password
    = form_for(resource, :as => resource_name, :url => users_update_password_path, :html => { :method => :put }) do |f|
      = render "shared/error_messages", :target => @user
      .field
        = f.label :current_password, "Current password:"
        = required
        = f.password_field :current_password
        %p.details We need your current password for confirmation
      .field
        = f.label :password, "New password:"
        = required
        = f.password_field :password
      .field
        = f.label :password_confirmation, "Confirm new password:"
        = required
        = f.password_field :password_confirmation
      .actions
        = f.submit "Update", :class => "blue floatright"
        .cancelbutton
          %span
          = link_to 'Cancel', users_profile_path, :class => "cancelbutton"
