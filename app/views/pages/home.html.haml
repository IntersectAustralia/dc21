- if !user_signed_in?
  #content_container
    .container_centered
      = form_for("user", :url => user_session_path) do |f|
        = render(:partial => 'devise/sessions/form', :locals => { :f => f })
- else
  = render 'pages/pageactions'
  %h1 Home / Dashboard
  #content_container
    = render 'pages/contentnavigation'
    .userpannel
      .myprojects
        %h3 My Projects
      .recentuploads
        %h3 Recent Uploads
    .recentactivity
      %h3 Recent Activity
      %table.activity
        %tr
          %th Name
          %th Date
          %th User
        %tr{:class => cycle('field_bg', 'field_nobg')}
          %td
