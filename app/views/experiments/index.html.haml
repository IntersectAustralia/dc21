
- content_for :breadcrumb  do
  %h1 Home / Experiments

.experiment.new.whitebutton
  = link_to 'New Experiment', new_experiment_path
%br/

- if @experiments.empty?
  There are no experiments to display.
- else
  %table#experiments
    %tr
      %th Name
      %th Description
      %th Start date
      %th End date
      %th Subject
      %th

    - @experiments.each do |experiment|
      %tr
        %td= experiment.name
        %td= experiment.description
        %td= experiment.start_date
        %td= experiment.end_date
        %td= experiment.subject
        %td
          = link_to 'View', experiment
          = link_to 'Edit', edit_experiment_path(experiment)
          = link_to 'Delete', experiment, :confirm => 'Are you sure you want to delete this experiment?', :method => :delete
