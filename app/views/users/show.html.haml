%h1 Admin / Access Requests / user.first_name user.lastname 
#content_container
  .adminnavigation
    = tabs_tag(:builder => MenuTabBuilder, :namespace => :adminnavigation) do |tab|
      = tab.users 'List all users', users_path
      = tab.accessrequests 'Access Requests', access_requests_users_path
  .container
    = render_field "Email", @user.email
    = render_field "First name", @user.first_name
    = render_field "Last name", @user.last_name

    - if !@user.pending_approval?
      = render_field_with_block "Last Logged In" do
        - if @user.last_sign_in_at.nil?
          Never logged in
        - else
          = @user.last_sign_in_at.localtime.strftime("%d/%m/%Y %I:%M%p")
    = render_field "Role", (@user.role ? @user.role.name : "")
    = render_field_with_block "Status" do
      - if @user.status == 'A'
        Active
      - elsif @user.status == 'D'
        Deactivated
      - elsif @user.status == 'U'
        Pending Approval
      - elsif @user.status == 'R'
        Rejected
    .actions
      - if @user.pending_approval?
        .floatright
          - if can?(:reject, @user) then
            = link_to "Spam", reject_as_spam_user_path(@user), :method => :put, :class => "whitebutton"
            = link_to "Reject", reject_user_path(@user), :method => :put, :class => "redbutton"
          - if can?(:approve, @user) then
            = link_to "Approve", edit_approval_user_path(@user), :method => :get, :class => "bluebutton"
        = link_to 'Back', access_requests_users_path, :class => "whitebutton"

      - if @user.approved?
        .floatright
          - if can?(:update_role, User)
            = link_to 'Edit role', edit_role_user_path(@user)
          - if can?(:deactivate, User)
            - if @user == current_user
              = link_to "Deactivate", deactivate_user_path(@user), :confirm => "This is the user you are currently logged is as. Are you sure you want to deactivate it?" , :method => :put
            - else
              = link_to "Deactivate", deactivate_user_path(@user), :method => :put
        = link_to 'Back', users_path, :class => "whitebutton"

      - if @user.deactivated?
        .floatright
          - if can?(:update_role, User)
            = link_to 'Edit role', edit_role_user_path(@user)
          - if can?(:activate, User)
            = link_to "Activate", activate_user_path(@user), :method => :put, :class => "bluebutton"
        = link_to 'Back', users_path, :class => "whitebutton"

