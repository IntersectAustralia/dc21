- content_for :breadcrumb  do
  %h1 Data / Upload

.container
  = form_tag(bulk_update_data_files_path, :method => :put) do
    - @uploaded_files.each do |file|
      .file-panel{:id => "file_panel_#{file.id}"}
        = file.filename
        %br/
        = "Type: #{file.file_processing_status}"
        .rowform
          = label_tag "file_#{file.id}_experiment", "Experiment"
          = select_tag "files[#{file.id}][experiment_id]", option_groups_from_collection_for_select(grouped_experiments_for_select, :experiments, :name, :id, :name, file.experiment_id), :include_blank => true, :id => "file_#{file.id}_experiment"
        .rowform
          = label_tag "file_#{file.id}_description", "Description"
          = text_area_tag "files[#{file.id}][file_processing_description]", file.file_processing_description, :id => "file_#{file.id}_description"

        %ul.messages
          - file.messages.each do |message|
            %li= message
    = submit_tag "Update"