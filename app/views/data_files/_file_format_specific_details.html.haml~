- if @data_file.format == "TOA5"
  - @data_file.metadata_items.each do |item|
    - if item.key == "station_name"
      - fac = Facility.find_by_code(item.value)
      - unless fac.nil?
        = render_field item.key.humanize, fac.name
      - else 
        = render_field item.key.humanize, item.value
    - else
      = render_field item.key.humanize, item.value


  %h3 Data File Columns
  %table#column_info
    %tr
      %th Column
      %th Colum Mapping
      %th Unit
      %th Measurement Type
    - @data_file.column_details.each do |column_details|
      %tr
        %td= column_details.name
        %td
          - mapping = ColumnMapping.find_by_code(column_details.name.downcase)
          - unless mapping.nil?
            = mapping.name
          - else
            = ""
        %td= column_details.unit
        %td= column_details.data_type
