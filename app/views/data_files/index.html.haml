= render 'pages/pageactions'
%h1 Home / Explore Data
#content_container
  = render 'pages/contentnavigation'

  - if @data_files.empty?
    No files to display.
  - else
    %table#exploredata
      %tr
        %th.view View
        %th Name
        %th Date added
        %th Added by
        %th Start time
        %th End time
      - @data_files.each do |data_file|
        %tr{:class => cycle('field_bg', 'field_nobg')}
          %td.view= link_to '', data_files_path, :class => "view", :id => "view_#{data_file.id}"
          %td= data_file.filename
          %td= data_file.created_at.to_s(:with_time)
          %td= data_file.created_by.email if data_file.created_by
          %td= data_file.start_time.to_s(:with_seconds) if data_file.start_time
          %td= data_file.end_time.to_s(:with_seconds) if data_file.end_time
