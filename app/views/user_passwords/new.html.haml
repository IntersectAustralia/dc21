%h1 User Log In / Reset Password
#content_container
  .container_centered
    %h2 "Forgot Your Password?"
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f|
      = render "shared/error_messages", :target => @user
      .rowform
        = f.label :email, "Email:"
        = f.text_field :email
      .actions
        .cancelbutton
          %span
          = link_to 'Cancel', root_path, :class => "cancelbutton"
        = f.submit "Send me reset password instructions", :class => "floatright"
